           + 'él/ella': 'dará', nosotros: 'daremos', ellos: 'darán' }
       346 +              }
       347 +          ];
       348 +  
       349 +          const tenses = ['present', 'past', 'future'];
       350 +          const tenseNames = { present: 'Present', past: 
           + 'Preterite', future: 'Future' };
       351 +  
       352 +          // Create all verb+tense combinations
       353 +          let combinations = [];
       354 +          verbs.forEach(verb => {
       355 +              tenses.forEach(tense => {
       356 +                  combinations.push({ verb, tense });
       357 +              });
       358 +          });
       359 +  
       360 +          let currentIndex = 0;
       361 +          let shuffledCombinations = [...combinations];
       362 +  
       363 +          function shuffle(array) {
       364 +              for (let i = array.length - 1; i > 0; i--) {
       365 +                  const j = Math.floor(Math.random() * (i + 
           + 1));
       366 +                  [array[i], array[j]] = [array[j], 
           + array[i]];
       367 +              }
       368 +              return array;
       369 +          }
       370 +  
       371 +          shuffle(shuffledCombinations);
       372 +  
       373 +          function resetAll() {
       374 +              // Reset circles
       375 +              Object.values(circles).forEach(circle => {
       376 +                  gsap.to(circle, {
       377 +                      attr: { fill: '#dddddd', r: smallRadius
           +  },
       378 +                      duration: 0.3
       379 +                  });
       380 +              });
       381 +              // Hide conjugation labels
       382 +              Object.values(conjugationLabels).forEach(label 
           + => {
       383 +                  gsap.to(label, { attr: { opacity: 0 }, 
           + duration: 0.3 });
       384 +              });
       385 +          }
       386 +  
       387 +          function lightUpCircle(pronoun) {
       388 +              const circle = circles[pronoun];
       389 +              if (circle) {
       390 +                  gsap.to(circle, {
       391 +                      attr: { fill: circle.dataset.color, r: 
           + smallRadius * 1.2 },
       392 +                      duration: 0.4,
       393 +                      ease: 'back.out(1.7)'
       394 +                  });
       395 +              }
       396 +          }
       397 +  
       398 +          function showConjugation(pronoun, conjugation) {
       399 +              const label = conjugationLabels[pronoun];
       400 +              if (label) {
       401 +                  label.textContent = conjugation;
       402 +                  gsap.to(label, { attr: { opacity: 1 }, 
           + duration: 0.4 });
       403 +              }
       404 +          }
       405 +  
       406 +          let currentCombo = null;
       407 +  
       408 +          function showVerb(index) {
       409 +              currentCombo = shuffledCombinations[index];
       410 +              const { verb, tense } = currentCombo;
       411 +  
       412 +              verbText.textContent = verb.infinitive;
       413 +              tenseText.textContent = 
           + `(${tenseNames[tense]})`;
       414 +              meaningText.textContent = verb.meaning;
       415 +  
       416 +              resetAll();
       417 +          }
       418 +  
       419 +          function revealConjugations() {
       420 +              if (!currentCombo) return;
       421 +  
       422 +              const { verb, tense } = currentCombo;
       423 +              const conjugations = verb[tense];
       424 +  
       425 +              let delay = 0;
       426 +              const pronouns = ['yo', 'tú', 'él/ella', 
           + 'nosotros', 'ellos'];
       427 +  
       428 +              pronouns.forEach((pronoun, i) => {
       429 +                  setTimeout(() => {
       430 +                      lightUpCircle(pronoun);
       431 +                      showConjugation(pronoun, 
           + conjugations[pronoun]);
       432 +                  }, delay);
       433 +                  delay += 300;
       434 +              });
       435 +          }
       436 +  
       437 +          document.getElementById('revealBtn').addEventListen
           + er('click', revealConjugations);
       438 +  
       439 +          
           + document.getElementById('nextBtn').addEventListener('click',
           +  () => {
       440 +              currentIndex = (currentIndex + 1) % 
           + shuffledCombinations.length;
       441 +              if (currentIndex === 0) {
       442 +                  shuffle(shuffledCombinations);
       443 +              }
       444 +              showVerb(currentIndex);
       445 +          });
       446 +  
       447 +          // Show first verb
       448 +          showVerb(0);
       449 +      </script>
       450 +  </body>
       451 +  </html>

