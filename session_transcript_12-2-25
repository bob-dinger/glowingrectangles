       210 +          function resetTenseZones() {
       211 +              Object.values(tenseZones).forEach(zone => {
       212 +                  gsap.to(zone, {
       213 +                      attr: { opacity: 0 },
       214 +                      duration: 0.3
       215 +                  });
       216 +              });
       217 +          }
       218 +  
       219 +          function flashTense(tense) {
       220 +              const zone = tenseZones[tense];
       221 +              if (zone) {
       222 +                  gsap.fromTo(zone,
       223 +                      { attr: { opacity: 0.5 } },
       224 +                      { attr: { opacity: 0 }, duration: 1.2, 
           + ease: 'power2.out' }
       225 +                  );
       226 +              }
       227 +          }
