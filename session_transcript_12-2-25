       308 +  
       309 +          // Logarithmic
       310 +          (function() {
       311 +              const svg = 
           + document.getElementById('logarithmic');
       312 +              drawAxes(svg);
       313 +  
       314 +              const points = [];
       315 +              const graphWidth = width - 2 * padding;
       316 +              const graphHeight = height - 2 * padding;
       317 +  
       318 +              for (let i = 1; i <= 100; i++) {
       319 +                  const t = i / 100;
       320 +                  const log = Math.log(1 + t * 9) / 
           + Math.log(10); // Log base 10, normalized
       321 +                  const x = padding + (i / 100) * graphWidth;
       322 +                  const y = height - padding - log * 
           + graphHeight;
       323 +                  points.push({ x, y });
       324 +              }
       325 +  
       326 +              drawCurve(svg, points, '#06B6D4');
       327 +          })();
       328 +  
       329 +          // J-Curve
       330 +          (function() {
       331 +              const svg = document.getElementById('j-curve');
       332 +              drawAxes(svg);
       333 +  
       334 +              const points = [];
       335 +              const graphWidth = width - 2 * padding;
       336 +              const graphHeight = height - 2 * padding;
       337 +  
       338 +              for (let i = 0; i <= 100; i++) {
       339 +                  const t = i / 100;
       340 +                  // Dip then rise: combination of negative 
           + quadratic and exponential
       341 +                  const jcurve = -2 * t * (1 - t) + 
           + Math.pow(t, 2.5) * 1.5;
       342 +                  const normalized = (jcurve + 0.5) / 1.5; //
           +  Shift and normalize
       343 +                  const x = padding + t * graphWidth;
       344 +                  const y = height - padding - Math.max(0, 
           + Math.min(1, normalized)) * graphHeight;
       345 +                  points.push({ x, y });
       346 +              }
       347 +  
       348 +              drawCurve(svg, points, '#EC4899');
       349 +          })();
       350 +  
       351 +          // Diminishing Returns
       352 +          (function() {
       353 +              const svg = 
           + document.getElementById('diminishing');
       354 +              drawAxes(svg);
       355 +  
       356 +              const points = [];
       357 +              const graphWidth = width - 2 * padding;
       358 +              const graphHeight = height - 2 * padding;
       359 +  
       360 +              for (let i = 0; i <= 100; i++) {
       361 +                  const t = i / 100;
       362 +                  const diminish = 1 - Math.exp(-4 * t); // 
           + Approaches 1 asymptotically
       363 +                  const x = padding + t * graphWidth;
       364 +                  const y = height - padding - diminish * 
           + graphHeight;
       365 +                  points.push({ x, y });
       366 +              }
       367 +  
       368 +              drawCurve(svg, points, '#10B981');
       369 +          })();
       370 +  
       371 +          // Hyperbolic Discounting
       372 +          (function() {
       373 +              const svg = 
           + document.getElementById('hyperbolic');
       374 +              drawAxes(svg);
       375 +  
       376 +              const points = [];
       377 +              const graphWidth = width - 2 * padding;
       378 +              const graphHeight = height - 2 * padding;
       379 +  
       380 +              for (let i = 0; i <= 100; i++) {
       381 +                  const t = i / 100;
       382 +                  const hyperbolic = 1 / (1 + 5 * t); // 
           + Steep initial drop
       383 +                  const x = padding + t * graphWidth;
       384 +                  const y = height - padding - hyperbolic * 
           + graphHeight;
       385 +                  points.push({ x, y });
       386 +              }
       387 +  
       388 +              drawCurve(svg, points, '#F97316');
       389 +          })();
       390 +  
       391 +          // Bathtub Curve
       392 +          (function() {
       393 +              const svg = document.getElementById('bathtub');
       394 +              drawAxes(svg);
       395 +  
       396 +              const points = [];
       397 +              const graphWidth = width - 2 * padding;
       398 +              const graphHeight = height - 2 * padding;
       399 +  
       400 +              for (let i = 0; i <= 100; i++) {
       401 +                  const t = i / 100;
       402 +                  // High at start, low in middle, high at 
           + end
       403 +                  const bathtub = Math.exp(-10 * t) + 
           + Math.exp(-10 * (1 - t)) + 0.1;
       404 +                  const normalized = bathtub / 2.1;
       405 +                  const x = padding + t * graphWidth;
       406 +                  const y = height - padding - normalized * 
           + graphHeight;
       407 +                  points.push({ x, y });
       408 +              }
       409 +  
       410 +              drawCurve(svg, points, '#6366F1');
       411 +          })();
       412 +  
       413 +          // Long Tail
       414 +          (function() {
       415 +              const svg = 
           + document.getElementById('long-tail');
       416 +              drawAxes(svg);
       417 +  
       418 +              const points = [];
       419 +              const graphWidth = width - 2 * padding;
       420 +              const graphHeight = height - 2 * padding;
       421 +  
       422 +              for (let i = 1; i <= 100; i++) {
       423 +                  const t = i / 100;
       424 +                  // Steep drop then long flat tail
       425 +                  const longtail = Math.pow(t, -1.5);
       426 +                  const normalized = Math.min(longtail / 30, 
           + 1);
       427 +                  const x = padding + t * graphWidth;
       428 +                  const y = height - padding - normalized * 
           + graphHeight;
       429 +                  points.push({ x, y });
       430 +              }
       431 +  
       432 +              drawCurve(svg, points, '#A855F7');
       433 +          })();
       434 +  
       435 +          // Step Function
       436 +          (function() {
       437 +              const svg = 
           + document.getElementById('step-function');
       438 +              drawAxes(svg);
       439 +  
       440 +              const points = [];
       441 +              const graphWidth = width - 2 * padding;
       442 +              const graphHeight = height - 2 * padding;
       443 +  
       444 +              const steps = [0, 0, 0, 0.3, 0.3, 0.3, 0.7, 
           + 0.7, 0.7, 1, 1];
       445 +  
       446 +              for (let i = 0; i <= 100; i++) {
       447 +                  const t = i / 100;
       448 +                  const stepIndex = Math.floor(t * 
           + (steps.length - 1));
       449 +                  const stepValue = steps[stepIndex];
       450 +                  const x = padding + t * graphWidth;
       451 +                  const y = height - padding - stepValue * 
           + graphHeight;
       452 +                  points.push({ x, y });
       453 +              }
       454 +  
       455 +              drawCurve(svg, points, '#14B8A6');
       456 +          })();
       457 +  
       458 +          // Logistic Decay (inverted S-curve)
       459 +          (function() {
       460 +              const svg = 
           + document.getElementById('logistic-decay');
       461 +              drawAxes(svg);
       462 +  
       463 +              const points = [];
       464 +              const graphWidth = width - 2 * padding;
       465 +              const graphHeight = height - 2 * padding;
       466 +  
       467 +              for (let i = 0; i <= 100; i++) {
       468 +                  const t = (i / 100) * 12 - 6; // -6 to 6
       469 +                  const sigmoid = 1 / (1 + Math.exp(t)); // 
           + Inverted sigmoid
       470 +                  const x = padding + (i / 100) * graphWidth;
       471 +                  const y = height - padding - sigmoid * 
           + graphHeight;
       472 +                  points.push({ x, y });
       473 +              }
       474 +  
       475 +              drawCurve(svg, points, '#F43F5E');
       476 +          })();
       477        </script>
       478    </body>
       479    </html>

