       199            let currentIndex = 0;
       200 +          let shuffledPhrases = [...phrases];
       201    
       202 +          function shuffle(array) {
       203 +              for (let i = array.length - 1; i > 0; i--) {
       204 +                  const j = Math.floor(Math.random() * (i + 
           + 1));
       205 +                  [array[i], array[j]] = [array[j], 
           + array[i]];
       206 +              }
       207 +              return array;
       208 +          }
       209 +  
       210 +          shuffle(shuffledPhrases);
       211 +  
