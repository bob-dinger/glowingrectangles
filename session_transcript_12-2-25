       142 +          function resetCircles() {
       143 +              Object.values(circles).forEach(circle => {
       144 +                  gsap.to(circle, {
       145 +                      attr: { fill: '#dddddd', r: smallRadius
           +  },
       146 +                      duration: 0.3
       147 +                  });
       148 +              });
       149 +          }
       150 +  
       151 +          function lightUp(label) {
       152 +              const circle = circles[label];
       153 +              if (circle) {
       154 +                  gsap.to(circle, {
       155 +                      attr: { fill: circle.dataset.color, r: 
           + smallRadius * 1.3 },
       156 +                      duration: 0.4,
       157 +                      ease: 'back.out(1.7)'
       158 +                  });
       159 +              }
       160 +          }
       161 +  
       162 +          function showPhrase(index) {
       163 +              const phrase = phrases[index];
       164 +              document.getElementById('phrase').textContent =
           +  phrase.spanish;
       165 +              
           + document.getElementById('translation').textContent = 
           + phrase.english;
       166 +  
       167 +              resetCircles();
       168 +  
       169 +              setTimeout(() => {
       170 +                  lightUp(phrase.subject);
       171 +                  lightUp(phrase.object);
       172 +              }, 400);
       173 +          }
       174 +  
       175 +          
           + document.getElementById('nextBtn').addEventListener('click',
           +  () => {
       176 +              currentIndex = (currentIndex + 1) % 
           + phrases.length;
       177 +              showPhrase(currentIndex);
       178 +          });
       179 +  
       180 +          // Show first phrase
       181 +          showPhrase(0);
       182        </script>
       183    </body>
       184    </html>

